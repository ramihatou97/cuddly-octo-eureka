# ============================================================================
# Neurosurgical DCS Hybrid - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values

# Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/neurosurgical_dcs
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True  # Set to False in production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Performance
USE_CACHE=True
USE_PARALLEL_PROCESSING=True
MAX_WORKERS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/neurosurgical_dcs/app.log

# Monitoring
ENABLE_PROMETHEUS_METRICS=True
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_LEARNING_SYSTEM=True
REQUIRE_LEARNING_APPROVAL=True
ENABLE_AUDIT_LOGGING=True

# Testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/neurosurgical_dcs_test
TEST_REDIS_URL=redis://localhost:6380
