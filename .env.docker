# Neurosurgical DCS Hybrid - Docker Environment Configuration
# Copy to .env and update with your values

# Security - CRITICAL: Change these in production!
SECRET_KEY=generate_with_openssl_rand_hex_32_CHANGE_ME
DB_PASSWORD=strong_database_password_CHANGE_ME
REDIS_PASSWORD=strong_redis_password_CHANGE_ME

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost","http://localhost:8000","http://localhost:3000"]

# Claude API (for narrative generation - optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Feature Flags
ENABLE_LEARNING_SYSTEM=true
REQUIRE_LEARNING_APPROVAL=true
ENABLE_AUDIT_LOGGING=true

# Performance
USE_CACHE=true
USE_PARALLEL_PROCESSING=true
MAX_WORKERS=4

# Logging
LOG_LEVEL=INFO
